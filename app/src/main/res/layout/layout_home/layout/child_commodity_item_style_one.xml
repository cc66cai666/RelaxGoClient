<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="210dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/home_prefecture_bg"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_commodity_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/relaxgo_logo"/>

        <TextView
            android:id="@+id/tv_commodity_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="2"
            android:maxLength="14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price_now"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="￥4999.00"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/holo_red_light"/>
            <TextView
                android:id="@+id/tv_price_old"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="9sp"
                android:text="￥4999.00"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>